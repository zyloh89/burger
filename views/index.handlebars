<div class="container text-center">
    <div class="jumbotron">
    <h1 class="display-4 text-center">Eat-Da-Burger!</h1>
    </div>
</div>

<div class="row">
    <div class="col">
        <h2>Burger - waiting to be devoured!</h2>

            <ul>
            {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devour=true}}
                {{/unless}}
            {{/each}}
            </ul>   
    </div>


    <div class="col">
        <h2>Burgers devoured!</h2>

            <ul>
            {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{name}}
                </li>
                {{/if}}
            {{/each}}
            </ul>
    </div>
</div>

<div>
   <h2>Add a Burger</h2>
        <form class="create-form">

        <div class="form-group">
            <label for="burger">Burger Name:</label>
            <input type="text" id="ca" name="name">
        </div>

        <div class="row justify-content-center">
            <textarea class="form-control col-6" name="name" rows="4"></textarea>
        </div>

        <button type="submit">Submit</button>
</form> 

</div>